<% provide(:title, @library.name) %>

<div class="rk-detail">

	<div class="rk-header">
		<% if @library.logo? %>
			<div class="rk-icon">
				<%= image_tag @library.logo.url(:medium), size: "55x55"%>
			</div>
		<% end %>
		<div>
			<div class="rk-name">
				<%= @library.name %>
			</div>
			<div class="rk-url">
				<a href="<%= @library.k4_client_url %>"><%= @library.k4_client_url %></a>
			</div>
		</div>
	</div>

<p>
  <strong>Název:</strong>
  <%= @library.name %>
</p>

<p>
  <strong>Anglický Název:</strong>
  <%= @library.name_en %>
</p>

<p>
  <strong>Web knihovny:</strong>
	<% if @library.web %>
		<%= link_to @library.web, @library.web %>
	<% end %>
</p>

<p>
  <strong>Adresa knihovny:</strong>
  <%= @library.full_address %>
</p>

<p>
  <strong>Identifikátor Kraméria:</strong>
  <%= @library.code %>
</p>

<p>
  <strong>K4 klient:</strong>
  <% if @library.k4_client_url %>
    <%= link_to @library.k4_client_url, @library.k4_client_url %>
  <% end %>
</p>
<p>
  <strong>K5 klient:</strong>
  <% if @library.k5_client_url %>
    <%= link_to @library.k5_client_url, @library.k5_client_url %>
  <% end %>
</p>

<!--
<p>
  <strong>Alternativní klient:</strong>
  <% if @library.alt_client_url %>
    <%= link_to @library.alt_client_url, @library.alt_client_url %>
  <% end %>
</p>
-->
<p>
  <strong>Digitální knihovna:</strong>
  <% if @library.alt_client_universal_url %>
    <%= link_to @library.alt_client_universal_url, @library.alt_client_universal_url %>
  <% end %>
</p>

<p>
  <strong>Android:</strong>
  <% if @library.android == 0 %>
    NE
  <% elsif @library.android == 2 %>
    ANO
  <% elsif @library.android == 1 %>
    Připraven
  <% end %>
</p>

<p>
  <strong>iOS:</strong>
  <% if @library.ios == 0 %>
    NE
  <% elsif @library.ios == 2 %>
    ANO
  <% elsif @library.ios == 1 %>
    Připraven
  <% end %>
</p>

<p>
  <strong>Verze:</strong>
  <%= @library.version %>
</p>
<p>
  <strong>Vybrané (veřejné/všechny):</strong>
  <td><%= "#{number_with_delimiter(@library.recommended_public, delimiter: " ")}/#{number_with_delimiter(@library.recommended, delimiter: " ")}" %></td>
</p>
<p>
  <strong>Počet dokumentů (veřejné/všechny):</strong>
  <td><%= "#{number_with_delimiter(@library.documents_public, delimiter: " ")}/#{number_with_delimiter(@library.documents_all, delimiter: " ")}" %></td>
</p>
<p>
  <strong>Počet stran (veřejné/všechny):</strong>
  <td><%= "#{number_with_delimiter(@library.pages_public, delimiter: " ")}/#{number_with_delimiter(@library.pages_all, delimiter: " ")}" %></td>
</p>


<p>
  <strong>Email:</strong>
  <%= @library.email %>
</p>
<p>
  <strong>PDF Max Range:</strong>
  <%= @library.pdf_max %>
</p>

<strong>Intro:</strong>
<div class="rk-box" style="margin-top:5px;margin-bottom:20px;">
  <%= @library.intro.html_safe if @library.intro %>
</p>
</div>

<strong>Right Message:</strong>
<div class="rk-box" style="margin-top:5px;margin-bottom:20px;">
  <%= @library.right_msg.html_safe if @library.right_msg %>
</div>


<% if logged_in? %>
	<%= link_to 'Upravit', edit_library_path(@library) %> |
	<%= link_to 'Smazat', @library, method: :delete, data: { confirm: 'Opravdu chcete knihovnu smazat?' } %> |
	<%= link_to 'Obnovit', "/feeder/#{@library.code}" %>



<div class="rk-list">


<table style="min-width:1100px;">
  <thead>
    <tr>
      <th>Datum</th>
      <th>Všechny dokumenty</th>
			<th>Veřejné dokumenty</th>
			<th>Všechny stránky</th>
			<th>Veřejné stránky</th>
			<th>Verze Krameria</th>

    </tr>
  </thead>

  <tbody>
    <% @library.records.order(date: :desc).each do |record| %>
      <tr class='<%= cycle("odd", "even") %>'>
				<td><%= record.id  %>
          <%= record.date.strftime("%d.%m.%Y")  %>
        </td>
				 <td>
          <%= number_with_delimiter(record.documents_all, delimiter: " ") %>
					<% if record.inc_documents_all < 0 %>
						<span style="color:#aa3333;"><%= record.inc_documents_all %></span>
					<% end %>
					<% if record.inc_documents_all > 0 %>
						<span style="color:#33aa33;">+<%= record.inc_documents_all %></span>
					<% end %>
        </td>
				<td>
					<%= number_with_delimiter(record.documents_public, delimiter: " ") %>
					<% if record.inc_documents_public < 0 %>
						<span style="color:#aa3333;"><%= record.inc_documents_public %></span>
					<% end %>
					<% if record.inc_documents_public > 0 %>
						<span style="color:#33aa33;">+<%= record.inc_documents_public %></span>
					<% end %>
				</td>
				<td>
					<%= number_with_delimiter(record.pages_all, delimiter: " ") %>
					<% if record.inc_pages_all < 0 %>
						<span style="color:#aa3333;"><%= record.inc_pages_all %></span>
					<% end %>
					<% if record.inc_pages_all > 0 %>
						<span style="color:#33aa33;">+<%= record.inc_pages_all %></span>
					<% end %>
				</td>
				<td>
					<%= number_with_delimiter(record.pages_public, delimiter: " ") %>
					<% if record.inc_pages_public < 0 %>
						<span style="color:#aa3333;"><%= record.inc_pages_public %></span>
					<% end %>
					<% if record.inc_pages_public > 0 %>
						<span style="color:#33aa33;">+<%= record.inc_pages_public %></span>
					<% end %>
				</td>
				<td>
					<%= record.version %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>




<% end %>
</div>
</div>
